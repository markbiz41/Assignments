<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap 101 Template</title>

    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>

<!-- Name of Page -->
    <h1 class="text-center">Mark's Movie Guide</h1>
<!--Poster: {"thumbnail"=>"http://content7.flixster.com/movie/11/17/23/11172321_tmb.jpg", "profile"=>"http://content7.flixster.com/movie/11/17/23/11172321_tmb.jpg", "detailed"=>"http://content7.flixster.com/movie/11/17/23/11172321_tmb.jpg", "original"=>"http://content7.flixster.com/movie/11/17/23/11172321_tmb.jpg"-->}

<!-- Movie Title -->
<div class="jumbotron">
    <img src="http://content7.flixster.com/movie/11/17/23/11172321_ori.jpg"/>
  <h1><%= @movie['title'] %></h1>
  <p>Synopsis: <%= @movie['synopsis'] %></p>
</div>

<!-- Runtime -->
    <h1><p>Runtime: <%= @movie['runtime'] %></p></h1>


<!-- Ratings -->
    <h1><p>Ratings:</p></h1>

<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">critics_rating</h3>
  </div>
  <div class="panel-body">
    "Rotten"
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">critics_score</h3>
  </div>
  <div class="panel-body">
    54
  </div>
</div>

<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">audience_rating</h3>
  </div>
  <div class="panel-body">
    "Upright"
  </div>
</div>

<div class="panel panel-warning">
  <div class="panel-heading">
    <h3 class="panel-title">audience_score</h3>
  </div>
  <div class="panel-body">
    61
  </div>
</div>


<!-- Cast Members -->
    <h1><p>Cast Members:</p></h1>

    <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>ID #</th>
        <th>Characters</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>1</td>
        <td>Tom Cruise</td>
        <td>162652763</td>
        <td>Jack Harper</td>
      </tr>
      <tr>
        <td>2</td>
        <td>Olga Kurylenko</td>
        <td>238450143</td>
        <td>Julia Rusakova</td>
      </tr>
      <tr class="info">
        <td>3</td>
        <td>Morgan Freeman</td>
        <td>162652224</td>
        <td>Beech</td>
      </tr>
      <tr class="success">
        <td>4</td>
        <td>Andrea Riseborough</td>
        <td>770704179</td>
        <td>Victoria\Vika\Olsen</td>
      </tr>
      <tr class="danger">
        <td>5</td>
        <td>Nikolaj Coster-Waldau</td>
        <td>559808757</td>
        <td>Sykes</td>
      </tr>

    </tbody>
  </table>


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>
